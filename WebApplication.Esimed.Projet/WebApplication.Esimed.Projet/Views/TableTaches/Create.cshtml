@model WebApplication.Esimed.Projet.Service.TableTache

@{
    ViewBag.Title = "Create";
}
    <h2>Création d'une nouvelle tâche</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Table des Taches</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2">
                    Tâche :
                </div>
                <div class="col-md-2">
                    @Html.HiddenFor(model => model.IdJalon, new { Value = ViewBag.IdJalon })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TacheNom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TacheNom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    Nombre de Jours :
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TacheNbDeJours, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TacheNbDeJours, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Créer" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retour à la liste", "Index")
    </div>

