@model WebApplication.Esimed.Projet.Service.TableTache

@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TableTache</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TacheId)

        <div class="form-group">
            <div class="control-label col-md-2">
                Tâche :
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TacheNom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TacheNom, "", new { @class = "text-danger" })
            </div>
        </div>
   
        <div class="form-group">
            <div class="control-label col-md-2">
                Nombre de Jours :
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TacheNbDeJours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TacheNbDeJours, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <INPUT TYPE="button"
           VALUE="Retour à liste"
           onClick="history.back()"
           class="btn btn-default">
</div>
