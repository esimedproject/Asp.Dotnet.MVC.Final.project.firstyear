@model WebApplication.Esimed.Projet.Service.TableJalon

@{
    ViewBag.Title = "Create";
}

<h2>Créer le Jalon</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Table des Jalons</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2">
                Jalon :
            </div>
            <div class="col-md-2">
                @Html.HiddenFor(model => model.IdProjet, new { Value = ViewBag.IdProjet })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.JalonNom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JalonNom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Date de Début prévisionnelle:
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.JalonDateDebut, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.JalonDateDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Date de Fin prévisionnelle:
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.JalonDateFin, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.JalonDateFin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à liste", "Index")
</div>