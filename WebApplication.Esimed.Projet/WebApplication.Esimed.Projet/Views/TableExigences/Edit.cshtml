@model WebApplication.Esimed.Projet.Service.TableExigence

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Table Exigence</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ExigenceId)

        <div class="form-group">
            <div>Ajouter un commentaire</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExigenceCommentaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExigenceCommentaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>Exigences fonctionnels : </div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ExigenceFonctionnel)
                    @Html.ValidationMessageFor(model => model.ExigenceFonctionnel, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div>Exigences de Tâche : </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExigenceFonctionTache, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExigenceFonctionTache, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
